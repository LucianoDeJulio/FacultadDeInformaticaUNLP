programa Ejercicio3-1

areas
  ciudad : AreaC(1,1,100,100)
  

robots 
  robot tipo1
  variables
    seguir : boolean
    flores : numero
    av : numero
    ca : numero
  comenzar
    flores := 0
    seguir := F
    av := PosAv
    ca := PosCa
    mientras (seguir = F)
      BloquearEsquina(25,25)
      Pos(25,25)
      si(HayFlorEnLaEsquina)
        tomarFlor
        flores := flores + 1
      sino
        seguir := V
      Pos(av,ca)
      LiberarEsquina(25,25)
    Informar(flores)
  fin

variables 
  robot1: tipo1
  robot2: tipo1
  
comenzar 
  AsignarArea(robot1,ciudad)
  AsignarArea(robot2,ciudad)
  
  Iniciar(robot1, 20, 20)
  Iniciar(robot2, 21, 21) 
fin