programa Ejercicio3-2

areas
  ciudad : AreaC(1,1,100,100)

robots 
  robot tipo1
  variables
    flores : numero
  comenzar
    flores := 0
    repetir 2
      repetir 20
        mientras(HayFlorEnLaEsquina)
          tomarFlor
          flores := flores + 1
        mover
      derecha
      repetir 25
        mientras (HayFlorEnLaEsquina)
          tomarFlor
          flores := flores + 1
        mover
      derecha
    Informar(flores)
    EnviarMensaje(flores, robot3)
    BloquearEsquina(10,10)
    Pos(10,10)
    mientras(HayFlorEnLaBolsa)
      depositarFlor
    LiberarEsquina(10,10)
    Pos(10,5)
  fin

  robot tipo2
  variables
    flores : numero
  comenzar
    flores := 0
    repetir 2
      repetir 20
        mientras(HayFlorEnLaEsquina)
          tomarFlor
          flores := flores + 1
        mover
      derecha
      repetir 20
        mientras(HayFlorEnLaEsquina)
          tomarFlor
          flores := flores + 1
        mover
      derecha
    Informar(flores)
    EnviarMensaje(flores, robot3)
    BloquearEsquina(10,10)
    Pos(10,10)
    mientras(HayFlorEnLaBolsa)
      depositarFlor
    LiberarEsquina(10,10)
    Pos(35,35)
  fin
  
  robot tipo3
  variables
    total : numero
    flores : numero
  comenzar
    total := 0
    RecibirMensaje(flores, robot1)
    total := total + flores
    RecibirMensaje(flores,robot2)
    total := total + flores
    Informar (total)
  fin

variables 
  robot1: tipo1
  robot2: tipo2
  robot3: tipo3
  
comenzar 
  AsignarArea(robot1,ciudad)
  AsignarArea(robot2,ciudad)
  AsignarArea(robot3,ciudad)
  Iniciar(robot1, 10, 5)
  Iniciar(robot2, 35, 35) 
  Iniciar(robot3, 11, 10)
fin
