programa Ejercicio-1
areas
  Ciudad : AreaC(1,1,100,100)
robots 
  
  robot tipo1
  variables
    flores : numero
    calle : numero
    avenida : numero
  comenzar
    flores := 0
    RecibirMensaje(avenida, robotJefe)
    avenida := avenida
    RecibirMensaje (calle, robotJefe)
    calle := calle
    repetir 2
      repetir 10
        mientras(HayFlorEnLaEsquina)
          tomarFlor
          flores := flores + 1
        mover
      derecha
      repetir 8
        mientras(HayFlorEnLaEsquina)
          tomarFlor
          flores := flores + 1
        mover
      derecha
    Informar(flores)
  fin 
   
  robot tipo2
  variables
    calle : numero
    avenida : numero
  comenzar
    calle := 8
    avenida := 10
    EnviarMensaje(avenida,robot1)
    EnviarMensaje(calle,robot1)
    EnviarMensaje(avenida,robot2)
    EnviarMensaje(calle,robot2)
    EnviarMensaje(avenida,robot3)
    EnviarMensaje(calle,robot3)
    EnviarMensaje(avenida,robot4)
    EnviarMensaje(calle,robot4)
    EnviarMensaje(avenida,robot5)
    EnviarMensaje(calle,robot5)
    EnviarMensaje(avenida,robot6)
    EnviarMensaje(calle,robot6)
  fin
  
variables
  robot1: tipo1
  robot2: tipo1
  robot3: tipo1
  robot4: tipo1
  robot5: tipo1
  robot6: tipo1
  robotJefe: tipo2
comenzar
  AsignarArea(robot1, Ciudad)
  AsignarArea(robot2, Ciudad)
  AsignarArea(robot3, Ciudad)
  AsignarArea(robot4, Ciudad)
  AsignarArea(robot5, Ciudad)
  AsignarArea(robot6, Ciudad)
  AsignarArea(robotJefe, Ciudad)
  Iniciar(robot1, 2, 2)
  Iniciar(robot2, 6, 2)
  Iniciar(robot3, 10, 2)
  Iniciar(robot4, 14, 2)
  Iniciar(robot5, 18, 2)
  Iniciar(robot6, 22, 2)
  Iniciar(robotJefe, 1, 1)
fin


