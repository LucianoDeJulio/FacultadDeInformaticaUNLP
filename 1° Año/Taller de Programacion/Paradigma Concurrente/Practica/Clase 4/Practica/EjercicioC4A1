programa Ejercicio-1-a
areas
  areaRectangulo1 : AreaP(2,2,7,5)
  areaRectangulo2 : AreaP(2,6,7,9)
  areaRectangulo3 : AreaP(2,10,7,13)
  areaRectangulo4 : AreaP(2,14,7,17)
  areaRectangulo5 : AreaP(2,18,7,21)
  areaRectangulo6 : AreaP(2,22,7,25)
  areaJefe: AreaP(1,1,1,1)
  
robots 
  robot tipo1
  variables 
    flores : numero
  comenzar
    flores := 0
    repetir 2
      repetir 3
        mientras(HayFlorEnLaEsquina)
          tomarFlor
          flores := flores + 1
        mover
      derecha
      repetir 5
        mientras(HayFlorEnLaEsquina)
          tomarFlor
          flores := flores + 1
        mover
      derecha
    Informar(flores)
    EnviarMensaje(flores,robotJ) 
  fin
  
  robot tipoJefe
  variables
    aux:numero
    flores:numero
  comenzar
    flores:=0
    repetir 6
      RecibirMensaje(aux,*)
      flores:=flores+aux
    Informar(flores)
  fin
  
variables 
  robot1: tipo1
  robot2: tipo1
  robot3: tipo1
  robot4: tipo1
  robot5: tipo1
  robot6: tipo1
  robotJ: tipoJefe

comenzar 
  AsignarArea(robot1,areaRectangulo1)
  AsignarArea(robot2,areaRectangulo2)
  AsignarArea(robot3,areaRectangulo3)
  AsignarArea(robot4,areaRectangulo4)
  AsignarArea(robot5,areaRectangulo5)
  AsignarArea(robot6,areaRectangulo6)
  AsignarArea(robotJ,areaJefe)
  Iniciar(robot1, 2, 2)
  Iniciar(robot2, 2, 6)
  Iniciar(robot3, 2, 10)
  Iniciar(robot4, 2, 14)
  Iniciar(robot5, 2, 18)
  Iniciar(robot6, 2, 22)
  Iniciar(robotJ, 1, 1)
fin
 

