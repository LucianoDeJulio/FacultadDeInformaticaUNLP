programa Ejercicio-1-a
procesos 
  proceso juntarF(ES flores:numero)
  comenzar
    mientras(HayFlorEnLaEsquina)
      tomarFlor
      flores := flores + 1
  fin
   
areas
  areaRectangulo1 : AreaP(2,2,7,7)
  areaRectangulo2 : AreaP(8,2,13,7)
  areaRectangulo3 : AreaP(14,2,19,7)
  areaJefe: AreaP(1,1,1,1)
  
robots  
  robot tipo1 
  variables  
    flores : numero  
    av : numero
    ca : numero
    avO : numero
    caO : numero
  comenzar
    avO := PosAv
    caO := PosCa
    repetir 3  
      flores := 0
      Random(av,1,5)
      Random(ca,1,5)
      av := av + avO
      ca := ca + caO
      Pos(av,ca)
      juntarF(flores)
      Informar(flores) 
      EnviarMensaje(flores,robotJ)
      Pos(avO,caO)
  fin
  
  robot tipoJefe
  variables
    flores : numero
    aux : numero
  comenzar
    flores := 0
    repetir 3
      RecibirMensaje(aux, robot1)
      flores := flores + aux
      RecibirMensaje(aux, robot2)
      flores := flores + aux
      RecibirMensaje(aux, robot3)
      flores := flores + aux
    Informar(flores)
  fin
  
variables 
  robot1: tipo1
  robot2: tipo1
  robot3: tipo1
  robotJ: tipoJefe

comenzar 
  AsignarArea(robot1,areaRectangulo1)
  AsignarArea(robot2,areaRectangulo2)
  AsignarArea(robot3,areaRectangulo3)
  AsignarArea(robotJ,areaJefe)
  Iniciar(robot1, 2, 2)
  Iniciar(robot2, 8, 2)
  Iniciar(robot3, 14, 2)
  Iniciar(robotJ, 1, 1)
fin
 

